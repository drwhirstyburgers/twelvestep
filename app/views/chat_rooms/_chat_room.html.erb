<div class="contains-index">
  <% if current_user.username == chat_room.title %>
    <h4><%= link_to chat_room.users.first.username, chat_room_path(chat_room) %></h4>
    <small>Started at <%= chat_room.created_at.to_formatted_s(:short) %></small>
  <% else %>
    <h4><%= link_to "#{chat_room.title}", chat_room_path(chat_room) %></h4>
    <small>Started at <%= chat_room.created_at.to_formatted_s(:short) %></small>
  <% end %>
</div>
