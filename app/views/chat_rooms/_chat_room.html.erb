<div class="contains-index">
  <div class="pull-right">
    <%= link_to "End Chat", chat_room, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this chat?'} %>
    <%= link_to "Enter Chat", chat_room_path(chat_room), class: 'btn btn-primary' %>
  </div>
  <% if current_user.id == chat_room.users.first.id %>
    <h4><%= link_to chat_room.users.last.username, user_path(chat_room.users.last) %></h4>
    <small>Started at <%= chat_room.created_at.to_formatted_s(:short) %></small>
  <% elsif current_user.id == chat_room.users.last.id %>
    <h4><%= link_to chat_room.users.first.username, user_path(chat_room.users.first) %></h4>
    <small>Started at <%= chat_room.created_at.to_formatted_s(:short) %></small>
  <% end %>
</div>
