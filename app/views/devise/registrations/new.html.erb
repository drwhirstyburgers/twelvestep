<div class='row'>
<div class="contain">
  <h2>Sign up</h2>
  <div class='col-md-4'>
    <ul>
      <li>Please be respecful!</li>
      <li>Your catchphrase must be between 5 and 90 characters</li>
      <li>Your bio cannot exceed 500 characters</li>
    </ul>
  </div>

<div class='col-md-8'>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username, class: 'form-control'  %><br />
    <%= f.label :email %><br />
    <%= f.email_field :email, class: 'form-control', autofocus: true, autocomplete: "email" %></br>
  </div>

  <div class="field">
    <%= f.label :years_sober %><br />
    <%= f.text_field :years_sober, class: 'form-control' %><br />
  </div>

  <div class="field">
    <%= f.label :catchphrase %><br />
    <%= f.text_field :catchphrase, class: 'form-control' %><br />
  </div>

  <div class="field">
    <%= f.label "My Story", color: "white"%><br />
    <%= f.text_area :bio, class: 'form-control' %><br />
  </div>

  <div class="field">
    <%= f.label :password, color: "white" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, class: 'form-control', autocomplete: "off" %></br>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, color: "white" %><br />
    <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "off" %>
  </div></br>

  <div class="actions">
    <%= f.submit "Sign up", class: 'btn btn-primary' %>
  </div>
<% end %>
  </div>
    </div>
