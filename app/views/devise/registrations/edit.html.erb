<div class='row'>
  <div class="contain-edit">
  <h2>Edit</h2>
  <div class='col-md-4'>
    <ul>
      <li>Please be respecful!</li>
      <li>Your catchphrase must be between 5 and 90 characters</li>
      <li>Your bio cannot exceed 500 characters</li>
    </ul>
  </div>

  <div class='col-md-8'>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :username %><br />
      <%= f.text_field :username, class: 'form-control'  %><br />
      <%= f.label :email %><br />
      <%= f.email_field :email, class: 'form-control', autofocus: true, autocomplete: "email" %></br>
    </div>

    <div class="field">
      <%= f.label :years_sober %><br />
      <%= f.text_field :years_sober, class: 'form-control' %><br />
    </div>

    <div class="field">
      <%= f.label :catchphrase %><br />
      <%= f.text_field :catchphrase, class: 'form-control' %><br />
    </div>

    <div class="field">
      <%= f.label "My Story", color: "white"%><br />
      <%= f.text_area :bio, class: 'form-control' %><br />
    </div>

    <div class="field">
      <%= f.label "I am looking for: ", color: "white"%>
      <%= f.collection_radio_buttons :role, [[:seeker, 'Help  '], [:stepper, 'I want to help someone!']], :first, :last %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
      <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div></br>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
    </div></br>

    <div class="field">
      <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, autocomplete: "off", class: 'form-control' %>
    </div></br>

    <div class="actions">
      <%= f.submit "Update", class: 'btn btn-primary' %>
    </div>
    <% end %>

    <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-primary' %></p>

    <%= link_to "Back", :back %>
    </div>
  </div>
</div>
