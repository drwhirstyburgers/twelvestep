    <div class="field">
      <%= f.label :username %><br />
      <%= f.text_field :username, class: 'form-control'  %><br />
      <%= f.label :email %><br />
      <%= f.email_field :email, class: 'form-control', autofocus: true, autocomplete: "email" %></br>
    </div>

    <div class="field">
      <%= f.label :years_sober %><br />
      <%= f.text_field :years_sober, class: 'form-control' %><br />
    </div>

    <div class="field">
      <%= f.label :catchphrase %><br />
      <%= f.text_field :catchphrase, class: 'form-control' %><br />
    </div>

    <div class="field">
      <%= f.label "My Story", color: "white"%><br />
      <%= f.text_area :bio, class: 'form-control' %><br />
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
      <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div></br>

    <div class="field">
      <%= f.label :password_confirmation %><br />
