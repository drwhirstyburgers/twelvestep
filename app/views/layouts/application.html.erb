<!DOCTYPE html>
<html>
  <head>
    <title>TwelveStep</title>
    <%= csrf_meta_tags %>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class='container'>
      <h2>Twelve Step</h2>
      <nav class="nav nav-tabs">
        <li class="pull-right">
          <%= link_to "Home", welcome_index_path, class:"btn btn-primary" %>
        </li>
        <li class="pull-right">
          <%= link_to "About", welcome_about_path, class:"btn btn-primary" %>
        </li>
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to "Sign Out", destroy_user_session_url, method: :delete, class:"btn btn-primary" %>
          </li>
          <li class="nav-item">
            <%= link_to current_user.username, edit_user_registration_path, class:"btn btn-primary" %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Sign In", new_user_session_url, class:"btn btn-primary" %>
          </li>
          <li class="nav-item">
            <%= link_to "Sign Up", new_user_registration_path, class:"btn btn-primary" %>
          </li>
        <% end %>
      </nav>

      <% if flash[:notice] %>
         <div class="alert alert-success">
           <button type="button" class="close" data-dismiss="alert">&times;</button>
           <%= flash[:notice] %>
         </div>
       <% elsif flash[:alert] %>
         <div class="alert alert-warning">
           <button type="button" class="close" data-dismiss="alert">&times;</button>
           <%= flash[:alert] %>
         </div>
       <% end %>

    <%= yield %>
    </div>
  </body>
</html>
